{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictNullChecks": false
    },
    "include": [
      "src/**/*"
    ]
  }